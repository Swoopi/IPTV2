<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/AccountInfoButton"
        android:layout_width="446dp"
        android:layout_height="43dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="20dp"
        android:text="Account Info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/DateTimeButton"
        android:layout_width="446dp"
        android:layout_height="43dp"
        android:layout_marginStart="104dp"
        android:text="Date and Time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UpdateLanguageButton" />

    <Button
        android:id="@+id/LogoutButton"
        android:layout_width="446dp"
        android:layout_height="43dp"
        android:layout_marginStart="104dp"
        android:text="Logout"
        android:textColor="#B70F0F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:id="@+id/ClearSearchHistoryButton"
        android:layout_width="446dp"
        android:layout_height="43dp"
        android:layout_marginStart="104dp"
        android:text="Clear Search History"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ClearCacheButton" />

    <Button
        android:id="@+id/button7"
        android:layout_width="446dp"
        android:layout_height="43dp"
        android:layout_marginStart="104dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ClearSearchHistoryButton" />

    <Button
        android:id="@+id/ClearCacheButton"
        android:layout_width="446dp"
        android:layout_height="43dp"
        android:layout_marginStart="104dp"
        android:text="Clear Cache"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DateTimeButton" />

    <Button
        android:id="@+id/UpdateLanguageButton"
        android:layout_width="446dp"
        android:layout_height="43dp"
        android:layout_marginStart="104dp"
        android:text="Language"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AccountInfoButton" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="24dp"
        android:text="Profile and Settings"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/BackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>