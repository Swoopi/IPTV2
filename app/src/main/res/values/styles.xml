<resources>

    <!-- Base application theme for Leanback -->
    <style name="AppTheme" parent="Theme.Leanback">
        <!-- Customize your theme here -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme for AppCompat activities -->
    <style name="AppCompatTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Dark variant of the primary color -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Accent color -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Background color -->
        <item name="android:windowBackground">@color/colorGray</item>
        <!-- Other customizations -->
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>
